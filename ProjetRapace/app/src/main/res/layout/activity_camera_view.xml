<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetRapace.CameraView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FrameHolder">

        <RelativeLayout
            android:id="@+id/ControlsHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/recordControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Recording"></Button>

                <Button
                    android:id="@+id/screenshotControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screenshot"></Button>

                <Button
                    android:id="@+id/exitControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"></Button>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>